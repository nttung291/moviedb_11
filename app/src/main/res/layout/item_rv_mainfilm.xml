<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_5"
    app:cardBackgroundColor="@color/colorPrimary">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/color_dove_grey">
        <View
            android:id="@+id/iv_film_bookmark"
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent"
            android:background="@color/color_outrageous_orange"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="@id/iv_film_bookmark"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_filmname_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_white"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/iv_poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.15"/>
        <TextView
            android:id="@+id/tv_genres_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@id/iv_poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.45" />
         <ImageView
             android:id="@+id/iv_star_item"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_star"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="@id/iv_poster"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintHorizontal_bias="0.3"
             app:layout_constraintVertical_bias="0.85"/>
        <TextView
            android:id="@+id/tv_rate_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintVertical_bias="0.83"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
