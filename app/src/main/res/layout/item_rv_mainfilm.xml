<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_5"
    app:cardBackgroundColor="@color/colorPrimary">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/color_dove_grey">
        <View
            android:id="@+id/iv_film_bookmark"
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent"
            android:background="@color/color_outrageous_orange"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="@id/iv_film_bookmark"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_filmname_item"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_white"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.15" />
        <ImageView
            android:id="@+id/iv_date_item"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/ic_date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.4"/>
        <TextView
            android:id="@+id/tv_release_item"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:maxLines="1"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_date_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.4"/>
        <ImageView
            android:id="@+id/iv_vote_count_item"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/ic_like_vote"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.63"/>
        <TextView
            android:id="@+id/tv_votecount_item"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:maxLines="1"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_date_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.63"/>
         <ImageView
             android:id="@+id/iv_star_item"
             android:layout_width="@dimen/dp_18"
             android:layout_height="@dimen/dp_18"
             android:src="@drawable/ic_star"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="@id/iv_poster"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintHorizontal_bias="0.3"
             app:layout_constraintVertical_bias="0.86"/>
        <TextView
            android:id="@+id/tv_rate_item"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:maxLines="1"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_date_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.86"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

